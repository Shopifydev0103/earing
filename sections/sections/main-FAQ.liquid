<style>
    .accordion {
      background-color: white;
      color: #000;
      cursor: pointer;
      padding: 18px;
      width: 100%;
      border: none;
      text-align: left;
      outline: none;
      font-size: 15px;
      transition: 0.4s;
    }
    .accordion-button {
        border: none;
        background: none;
        font-family: Poppins;
        font-size: 24px;
        font-weight: 600;
        line-height: 26px;
        letter-spacing: 0.02em;
    }
    
    {% comment %} .active, .accordion:hover {
      background-color: ; 
    } {% endcomment %}
    
    .panel {
      padding: 0 18px;
      display: none;
      background-color: white;
      overflow: hidden;
    }
    .panel p {
        font-family: Poppins;
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
        letter-spacing: 0.02em;
        text-align: left;
        color: #000;
    }
    .faq .container {
        width: 50%;
        margin: auto;
    }
    .display-none {
        display: none;
    }
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      }
    
      @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
    </style>
<div class="faq section-{{ section.id }}-padding">
    <div class="container ">
        {%- for block in section.blocks -%}
            {%- if block.type == "FAQ" -%}
                {%- if block.settings.header != blank -%}
                    <div class="accordion">
                        <button class="accordion-button">{{ block.settings.header }}</button>
                        <span class="icon-allow-right">{% render 'icon-allow-right' %}</span>
                        <span class="icon-allow-drop display-none">{% render 'icon-allow-drop' %}</span>
                    </div>
                {%- endif -%}
                {%- if block.settings.content -%}
                    <div class="panel">
                        <p>{{ block.settings.content }}</p>
                    </div>
                {%- endif -%}
            {%- endif -%}
        {%- endfor -%}
        
    </div>
</div>

<script>
    var acc = document.getElementsByClassName("accordion");
    var i;
    
    for (i = 0; i < acc.length; i++) {
      acc[i].addEventListener("click", function() {
        this.classList.toggle("active");
        var panel = this.nextElementSibling;
        if (panel.style.display === "block") {
          panel.style.display = "none";
        } else {
          panel.style.display = "block";
        }
      });
    }
    </script>


{% schema %}
    {
        "name": "FAQ",
        "class": "section faq",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_top",
                "default": 36
              },
              {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "t:sections.all.padding.padding_bottom",
                "default": 36
              }
        ],
        "blocks": [
            {
                "type": "FAQ",
                "name": "faq",
                "settings": [
                    {
                        "type": "text",
                        "id": "header",
                        "label": "header"
                    },
                    {
                        "type": "richtext",
                        "id": "content",
                        "label": "content"
                    }
                ]
            }
            
        ],
        "presets": [
            {
              "name": "FAQ",
              "blocks": [
                {
                  "type": "FAQ"
                }
              ]
            }
          ]
        
    }
{% endschema %}