<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 0;
  }
  .title {
font-family: Poppins;
font-size: 60px;
font-weight: 600;
line-height: 70px;
letter-spacing: 0.02em;
text-align: left;
color: black;
  }
  .content {
font-family: Poppins;
font-size: 16px;
font-weight: 300;
line-height: 24px;
letter-spacing: 0.02em;
text-align: left;
